<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="user">

	<resultMap id="result" class="flora.user.model.User">
		<result property="userId" column="USERID" />
		<result property="password" column="PASSWORD" />
		<result property="name" column="NAME" />
		<result property="email" column="EMAIL" />
	</resultMap>

	<typeAlias alias="user" type="flora.user.model.User"/>

	<select id="findAll" resultMap="result">
		SELECT *
		FROM userinfo
    </select>

	<select id="getUserByUserIdAndPassword" resultClass="user" parameterClass="user">
    	SELECT USERID, NAME, EMAIL
    	  FROM USERINFO
    	 WHERE USER.USERID = #userId#
    	   AND USER.PASSWORD = #password#
    </select>

    <insert id="insertUser" parameterClass="user">
    	INSERT INTO
    		USERINFO (USERID,   PASSWORD,   NAME,   EMAIL)
    		  VALUES (#userId#, #password#, #name#, #email#)
    </insert>

    <select id="getUserByUserId" resultClass="user" parameterClass="string">
    	SELECT *
    	  FROM USERINFO
    	 WHERE USERID = #userId#
    </select>

    <select id="getUserList" resultClass="user">
    	SELECT USERID, NAME, EMAIL
    	  FROM USERINFO
    </select>
</sqlMap>
