<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="400" height="400"
           xmlns:icontact="suite.icontact.*"
           xmlns:code="http://code.google.com/p/flexlib/"
           currentState="login"
           backgroundColor="white">

    <icontact:IContactViewController id="controller"/>

    <mx:states>
        <mx:State name="login">
            <mx:SetProperty name="width" value="400"/>
            <mx:SetProperty name="height" value="200"/>
            <mx:SetProperty target="{LoginCanvas}" name="visible" value="true"/>
            <mx:SetProperty target="{iContactCanvas}" name="visible" value="false"/>
        </mx:State>
        <mx:State name="big">
            <mx:SetProperty name="width" value="900"/>
            <mx:SetProperty name="height" value="610"/>
            <mx:SetProperty target="{LoginCanvas}" name="height" value="0"/>
            <mx:SetProperty target="{iContactCanvas}" name="visible" value="true"/>
            <mx:SetProperty target="{iContactCanvas}" name="height" value="600"/>
            <mx:SetProperty target="{iContactDataGrid}" name="visible" value="true"/>
            <mx:SetProperty target="{iContactNavigator}" name="visible" value="true"/>
        </mx:State>
        <mx:State name="small">
            <mx:SetProperty name="width" value="400"/>
            <mx:SetProperty name="height" value="610"/>
            <mx:SetProperty target="{LoginCanvas}" name="height" value="0"/>
            <mx:SetProperty target="{iContactCanvas}" name="visible" value="true"/>
            <mx:SetProperty target="{iContactCanvas}" name="height" value="600"/>
            <mx:SetProperty target="{iContactDataGrid}" name="visible" value="true"/>
            <mx:SetProperty target="{iContactNavigator}" name="visible" value="false"/>
        </mx:State>
    </mx:states>

    <!-- iContact LOGIN -->
    <mx:Canvas id="LoginCanvas" right="10" left="10" top="10" bottom="10">
        <mx:Label text="iContact Login" y="10" x="78" fontSize="30"/>
        <mx:Label text="username" x="10" y="73"/>
        <mx:TextInput id="usernameTxtIpt" x="74" y="71" width="223"/>
        <mx:Label text="password" x="10" y="97"/>
        <mx:TextInput id="passwordTxtIpt" x="74" y="95" width="223"/>
        <mx:CheckBox id="rememberMeChkBox" label="remember Me" x="10" y="123"/>
        <mx:Button id="loginBtn" label="LOGIN" x="305" y="71" height="46"/>
    </mx:Canvas>

    <mx:Canvas id="iContactCanvas" width="100%" backgroundColor="white">
        <!-- HEADER -->
        <mx:Canvas width="100%" height="40" id="headerCanvas">
            <mx:Button label="小" id="changeStateBtn" left="10" top="10"/>
            <mx:Button id="newContactBtn" label="+" x="49" y="10"/>
            <mx:Button id="sendDataBtn" label="送" x="88" y="10"/>
            <mx:Button id="logoutBtn" label="LOGOUT" x="127" y="10" click="this.currentState='login'" />
            <mx:TextInput  id="searchTxtIpt" right="10" top="10"/>
        </mx:Canvas>

        <!-- BODY -->
        <mx:HBox top="40" bottom="30" left="10" right="10">
            <!-- iContact DATAGRID -->
            <mx:DataGrid id="iContactDataGrid" width="380" height="100%">
                <mx:columns>
                    <mx:DataGridColumn headerText="Name" />
                    <mx:DataGridColumn headerText="Phone" />
                    <mx:DataGridColumn headerText="Email" />
                </mx:columns>
            </mx:DataGrid>
            <!-- iContact DETAIL -->
            <code:SuperTabNavigator id="iContactNavigator" width="100%" height="100%"/>
        </mx:HBox>
        <mx:Label id="messageLabel" left="10" right="10" bottom="10" text="message"/>
    </mx:Canvas>

</mx:Canvas>
