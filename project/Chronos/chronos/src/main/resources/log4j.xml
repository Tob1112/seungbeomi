	-->
	<logger name="com.opensymphony.xwork2">
		<level value="WARN"/>
	</logger>
	<logger name="org.springframework">
		<level value="WARN"/>
	</logger>

 	<root>
        <priority value ="WARN" />
    	<appender-ref ref="console" />
