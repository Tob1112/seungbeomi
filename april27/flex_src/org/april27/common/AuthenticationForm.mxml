<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" width="322" height="242" horizontalCenter="0" verticalCenter="0"
    	backgroundColor="#f9f9f9"
    	borderColor="#192C3E" borderThickness="1" borderStyle="solid" horizontalAlign="center">
	<mx:HBox width="100%" height="50" backgroundColor="#192C3E" verticalAlign="middle" horizontalAlign="center" paddingLeft="30">
	    <mx:Text id="logInOutText" text="April27 LOGIN" color="#ffffff" fontSize="30" selectable="false"/>
	</mx:HBox>

	<mx:Label id="authenticationMessage" styleName="warning" visible="false" left="30" top="264"/>

	<!-- ========================================== -->
	<!-- LOGIN FORM                                 -->
	<!-- ========================================== -->
	<mx:Form id="authenticationForm" defaultButton="{loginButton}">
	    <mx:FormItem label="Username">
	        <mx:TextInput id="userName" text="admin"/>
	    </mx:FormItem>
	    <mx:FormItem label="Password">
	        <mx:TextInput id="password" displayAsPassword="true" text="admin"/>
	    </mx:FormItem>
	    <mx:FormItem>
	    	<mx:CheckBox id="rememberMeCheckBox" label="remember me"/>
	    </mx:FormItem>
	    <mx:FormItem>
	        <mx:Button id="loginButton" label="LOGIN" color="#00ff00" styleName="loginButton"/>
	    </mx:FormItem>
	</mx:Form>
</mx:VBox>
