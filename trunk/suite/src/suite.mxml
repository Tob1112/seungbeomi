<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute"
	minWidth="1024" minHeight="768"
	xmlns:suiteViews="suite.view.*"
	creationComplete="startService()"
	pageTitle="SUITE">

	<mx:Script>
		<![CDATA[
			import suite.model.vo.Employee;
			import mx.collections.IViewCursor;
			import mx.rpc.events.ResultEvent;
			import mx.collections.ArrayCollection;

			[Bindable]
			private var roster:ArrayCollection;

			private function startService():void {
				employeeService.send();
			}

			private function employeeServiceResultHandler(event:ResultEvent):void {
				var employees:ArrayCollection = event.result.roster.employee;
				var temp:ArrayCollection = new ArrayCollection();
				var cursor:IViewCursor = employees.createCursor();
				while(!cursor.afterLast) {
					var employee:Employee = new Employee();
					employee.fill(cursor.current);
					temp.addItem(employee);
					cursor.moveNext();
				}
				roster = temp;
			}
		]]>
	</mx:Script>

	<mx:Style source="suite.css"/>

	<mx:HTTPService id="employeeService" url="data/roster.xml" result="employeeServiceResultHandler(event)" />
	<mx:VBox width="1024" paddingLeft="0" paddingRight="0" horizontalCenter="0" top="12">
		<mx:ApplicationControlBar id="acb" width="100%">
			<mx:Text text="SUITE"/>
			<mx:ToggleButtonBar height="100%"
				dataProvider="{suiteViews}"/>
		</mx:ApplicationControlBar>

		<mx:ViewStack id="suiteViews" width="100%" height="768" creationPolicy="all">
			<suiteViews:Home id="home" label="Home"/>
			<suiteViews:EmployeeManager id="employeeManage" label="人事管理" />
		</mx:ViewStack>
	</mx:VBox>

</mx:Application>
