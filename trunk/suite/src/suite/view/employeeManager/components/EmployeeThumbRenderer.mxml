<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" width="180" height="250"
	horizontalAlign="center"
	horizontalScrollPolicy="off"
	verticalScrollPolicy="off">

	<mx:Image id="empImg" source="{data.image}" width="150" height="150"
		 scaleContent="true" horizontalAlign="center" verticalAlign="middle"/>

	<mx:VBox width="100%" height="100%" horizontalAlign="center" paddingTop="0" paddingBottom="0">
		<mx:Label text="{data.company}" />
		<mx:Label text="{data.department}"/>
		<mx:Label text="{data.name}"/>
	</mx:VBox>

</mx:VBox>
