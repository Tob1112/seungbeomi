	<beans:bean id="ipTokenBasedRememberMeServices" class="seungbeomi.spring.security.IPTokenBasedRememberMeServices">
		<beans:property name="key" value="security"/>
		<beans:property name="userDetailsService" ref="userService"/>
		<beans:property name="parameter" value="_remember_me"/>
		<beans:property name="cookieName" value="REMEMBER_ME"/>
	</beans:bean>
	
