				<prop key="admin">admin, ROLE_ADMIN</prop>
				<prop key="user">user, ROLE_USER</prop>
			</props>
		</property>
	</bean> -->
	
	<!-- TokenBasedRememberMeServices 클래스의 확장 -->
	<bean id="ipTokenBasedRememberMeServices" class="seungbeomi.spring.security.IPTokenBasedRememberMeServices">
		<property name="key" value="security"/>
		<property name="userDetailsService" ref="userService"/>
		<property name="parameter" value="_remember_me"/>
		<property name="cookieName" value="REMEMBER_ME"/>
	</bean>
	
