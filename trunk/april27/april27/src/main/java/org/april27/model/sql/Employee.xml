<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="Employee">

	<typeAlias alias="employee" type="org.april27.model.Employee"/>

	<resultMap id="employeeResult" class="employee">
		<result property="empName" column="EMP_NAME" />
		<!--<result property="password" column="PASSWORD" />-->
		<result property="email" column="EMAIL" />
	</resultMap>

	<select id="getEmployees" resultMap="employeeResult">
        SELECT EMP_NAME, EMAIL FROM EMPLOYEE
	</select>

    <select id="getEmployee" resultMap="employeeResult" parameterClass="string">
        SELECT EMP_NAME, EMAIL FROM EMPLOYEE WHERE EMP_NAME = #empName#
    </select>

    <insert id="addEmployee" parameterClass="employee">
        INSERT INTO EMPLOYEE(EMP_NAME, PASSWORD, EMAIL) VALUES (#empName#,#password#,#email#)
    </insert>

    <update id="updateEmployee" parameterClass="employee">
        UPDATE FROM EMPLOYEE
        SET PASSWORD = #password#, EMAIL = #email#
        WHERE EMP_NAME = #empName#
    </update>

    <delete id="removeEmployee" parameterClass="string">
        DELETE FROM EMPLOYEE WHERE EMP_NAME = #empName#
    </delete>
</sqlMap>
