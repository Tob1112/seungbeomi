<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%">

	<mx:Script>
		<![CDATA[

			private var isShowAnswer:Boolean = false;
			private var defaultRbAnswerColor:uint;
			private var defaultRbAnswerWeight:uint;

			private function showAnswer():void {
				if (!isShowAnswer) {
					taAnswer.height = 100;
					defaultRbAnswerColor = getStyle("rbAnswer");
					rbAnswer.setStyle("color", "red");
					rbAnswer.setStyle("fontWeight", "bold");
					isShowAnswer = true;
				} else {
					taAnswer.height = 0;
					rbAnswer.setStyle("color", defaultRbAnswerColor);
					rbAnswer.setStyle("fontWeight", defaultRbAnswerColor);
					isShowAnswer = false;
				}
			}
		]]>
	</mx:Script>

	<mx:VDividedBox width="100%" height="100%">

		<!-- ================================= -->
		<!-- TEST							   -->
		<!-- ================================= -->
		<mx:VBox id="testVBox" width="100%" height="100%" paddingLeft="10" paddingRight="10" paddingTop="10">
			<mx:Label text="第1問　（ストラテジ　企業活動）" fontWeight="bold"/>
			<mx:Label text="次のべン図の黒色で塗りつぶした部分の検索条件はどれか。"/>
			<mx:Image source="@Embed('assets/images/q01.png')"/>
			<mx:RadioButton label="ア　(not A) and B and C" id="rbAnswer"/>
			<mx:RadioButton label="イ　(not A) and (B or C)"/>
			<mx:RadioButton label="ウ　(not A) or (B and C)"/>
			<mx:RadioButton label="エ　(not A) or (B or C)"/>

			<mx:Spacer height="20"/>
			<mx:HBox width="100%">
				<mx:Spacer width="40%"/>
				<mx:Button label="正解 / 説明" width="200" click="showAnswer()"/>
			</mx:HBox>
			<mx:TextArea id="taAnswer" text="{'黒塗りされた部分を見ると、\nAの外側\nBの内側\nCの内側'}" width="100%" height="0" editable="false" fontSize="15" verticalScrollPolicy="off"/>

		</mx:VBox>

		<!-- ================================= -->
		<!-- MEMO							   -->
		<!-- ================================= -->
		<mx:VBox id="memoVBox" width="100%" height="0">
			<mx:HBox width="100%" height="20" backgroundColor="#bbbbbb">
				<mx:Label text="メモ" />
			</mx:HBox>
			<mx:TextArea id="taMemo" text="メモを残します、メモがある問題はメモアイコンがアニメーション（GIF）で動く" width="100%" height="100%"/>
		</mx:VBox>
	</mx:VDividedBox>
</mx:Canvas>
