<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%"
	xmlns:view="com.icontact.view.*" backgroundColor="white"
	horizontalScrollPolicy="off" verticalScrollPolicy="off">

	<view:IContactFormController id="controller"/>

	<!-- NAME -->
	<mx:Label x="10" y="53" text="Name"/>
	<mx:TextInput x="75" y="51" width="230" id="txtIptName" text="{controller.contact.name}"/>

	<!-- EMAIL -->
	<mx:Label x="10" y="81" text="Email"/>
	<mx:TextInput x="75" y="79" width="230" id="txtIptEmail" text="{controller.contact.email}"/>

	<!-- PHONE -->
	<mx:Label x="10" y="110" text="Phone"/>
	<mx:TextInput x="75" y="109" width="230" id="txtIptPhone" text="{controller.contact.phone}"/>

	<!-- ADDRESS -->
	<mx:Label x="10" y="136" text="Address"/>
	<mx:TextArea x="75" y="140" width="230" height="80" id="txtAreaAddress" text="{controller.contact.address}"/>

	<!-- NOTES -->
	<mx:Label x="10" y="229" text="Notes"/>
	<mx:TextArea x="75" y="228" width="230" height="80" id="txtIptNotes" text="{controller.contact.notes}"/>

	<mx:Button label="Save" id="saveButton" left="10" top="10" height="22"/>
	<mx:Button label="Delete" id="deleteButton" left="143" top="10"/>
	<mx:Button label="Cancel" id="cancelButton" x="72" y="10"/>
</mx:Canvas>
