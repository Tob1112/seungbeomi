	<!-- CREATE SQL							 -->
	<!-- =================================== -->
	<sql id="kinmuhyo.createKinmuhyo">
		CREATE TABLE kinmuhyo (
			nengetsu			TEXT,
			hizuke 				TEXT,
			yasumiKubun			TEXT,
			shigyoJikan			REAL,
			syuryoJikan			REAL,
			kyukeiJikan			REAL,
			jitsudoJikan		REAL,
			sagyoNaiyo			TEXT,
			syoteiNissu			INTEGER,
			sagyoNissu			INTEGER,
			kekkinNissu			INTEGER,
			totalJitsudoJikan	REAL
		);
	</sql>

	<!-- =================================== -->
	<!-- SELECT SQL							 -->
	<!-- =================================== -->
	<sql id="kinmuhyo.findKinmuhyo">
		SELECT * FROM kinmuhyo
		WHERE nengetsu = :nengetsu
		ORDER BY hizuke ASC;
	</sql>


