<!DOCTYPE form-validation PUBLIC
     "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1//EN"
     "http://jakarta.apache.org/commons/dtds/validator_1_1.dtd">

<form-validation>
   <global>
      <validator name="int"
                 classname="validators.TestTypeValidator"
                 method="validateInt"
                 methodParams="java.lang.Object,org.apache.commons.validator.Field"
                 msg="errors.int"/>

      <validator name="required"
                 classname="validators.TestValidator"
                 method="validateRequired"
                 methodParams="java.lang.Object,org.apache.commons.validator.Field"
                 msg="errors.required"/>
      <validator name="email"
                 classname="validators.TestValidator"
                 method="validateEmail"
                 methodParams="java.lang.Object,org.apache.commons.validator.Field"
                 msg="errors.email"/>
      <!--<validator name="date"
                 classname="org.apache.commons.validator.TestTypeValidator"
                 method="validateDate"
                 methodParams="java.lang.Object,org.apache.commons.validator.Field"
                 msg="errors.date"/>-->
   </global>
   <formset language="ja_JP">
      <form name="ValidateBean">
         <field property="name"  depends="required">
         	   <arg key="nameForm.name.displayname"/>
         </field>
         <field  property="email" depends="required,email">
         	     <arg key="nameForm.email.displayname"/>
         </field>
         <field  property="age" depends="required,int">
         	     <arg key="nameForm.age.displayname"/>
         </field>
         <!--<field property="value" depends="date">
             <var>
                 <var-name>datePattern</var-name>
                 <var-value>yyy/MM/dd</var-value>
             </var>
         </field>-->
      </form>
   </formset>
</form-validation>
